<Alloy>
	<NavigationWindow module="xp.ui">
		<Window titleid="SimpleDeliciousTitile" layout="vertical">
			<ListView >
				<Templates>
					<ItemTemplate name="fullItem" height="Ti.UI.SIZE" >
						<View layout="horizontal" height="Ti.UI.SIZE" horizontalWrap="false" onClick="doSelectItem">
							<ImageView id="check" width="50dp" height="50dp" backgroundColor="purple" left="0dp" />
							<View layout="vertical" height="Ti.UI.SIZE" left="5dp" horizontalWrap="false">
								<Label bindId="cakeName" width="Ti.UI.FILL" minimumFontSize="16" horizontalWrap="false" ellipsize="true" />
								<Label bindId="cakeShortDesc" width="Ti.UI.FILL" minimumFontSize="10" horizontalWrap="false" ellipsize="true" />
							</View>
						</View>
					</ItemTemplate>
				</Templates>
				<ListSection  id="section" dataCollection="cakesModel" dataTransform="dataTransformFunction" >
					<ListItem template="fullItem" selectionStyle="Titanium.UI.iPhone.ListViewCellSelectionStyle.NONE" cakeName:text="{cakeName}" cakeShortDesc:text="{cakeShortDesc}" accessoryType="Titanium.UI.LIST_ACCESSORY_TYPE_DISCLOSURE" />
				</ListSection>
			</ListView>
		</Window>
	</NavigationWindow>
</Alloy>
