<Alloy>
	<Window class="container" titleid="SimpleDeliciousTitile" backgroundColor="white" >
		<ScrollView top="0dp" bottom="50dp" height="Ti.UI.FILL" layout="vertical" disableBounce="true">
		<Label id="cakeName" color="black" top="5dp" />
		<ImageView id="image" backgroundColor="purple" height="320dp" top="5dp" width="320dp" />
			<Label id="cakeDesc"
				top="5dp"
				left="5dp"
				right="5dp"
				width="Ti.UI.FILL"
				height="Ti.UI.SIZE"
				verticalAlign="Ti.UI.TEXT_VERTICAL_ALIGNMENT_TOP"
				textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" />
		</ScrollView>
		<Button id="orderBtn" titleid="PlaceOrderTitle" width="Ti.UI.FILL" height="40dp" bottom="5dp" left="5dp" right="5dp" onClick="doPlaceOrder" />
	</Window>
</Alloy>
